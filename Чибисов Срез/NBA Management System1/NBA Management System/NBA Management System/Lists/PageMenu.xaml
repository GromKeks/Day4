<Page x:Class="NBA_Management_System.Lists.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA_Management_System.Lists"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <StackPanel x:Name="sp" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnTeams" Content="Команды" Height="40" Width="150" FontSize="17" Margin="10" Click="btnTeams_Click" />
            <Button x:Name="btnPlayers" Content="Игроки" Height="40" Width="150" FontSize="17" Margin="10" Click="btnPlayers_Click"/>
            <Button x:Name="btnMatches" Content="Матчи" Height="40" Width="150" FontSize="17" Margin="10" Click="btnMatches_Click"/>
            <Button x:Name="btnMatches_Copy" Content="Фото
" Height="40" Width="150" FontSize="17"/>
        </StackPanel>
    </Grid>
</Page>
